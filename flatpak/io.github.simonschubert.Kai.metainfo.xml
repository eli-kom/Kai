<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.simonschubert.Kai</id>

  <name>Kai</name>
  <summary>AI assistant powered by Ollama, Gemini, ChatGPT and more</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>Apache-2.0</project_license>

  <developer id="io.github.simonschubert">
    <name>Simon Schubert</name>
  </developer>

  <description>
    <p>
      Kai is a versatile AI assistant that connects to multiple AI services including
      Ollama, Google Gemini, OpenAI ChatGPT, Anthropic Claude, Mistral, Groq,
      OpenRouter, and any OpenAI-compatible API.
    </p>
    <p>Features:</p>
    <ul>
      <li>Chat with multiple AI providers from a single app</li>
      <li>Run local AI models via Ollama</li>
      <li>Text-to-speech support</li>
      <li>Image attachments and analysis</li>
      <li>Customizable system prompts</li>
      <li>Multiple conversation management</li>
      <li>Available on Android, iOS, Desktop, and Web</li>
    </ul>
  </description>

  <launchable type="desktop-id">io.github.simonschubert.Kai.desktop</launchable>

  <url type="homepage">https://github.com/SimonSchubert/Kai</url>
  <url type="bugtracker">https://github.com/SimonSchubert/Kai/issues</url>
  <url type="vcs-browser">https://github.com/SimonSchubert/Kai</url>

  <branding>
    <color type="primary" scheme_preference="light">#e8f5e9</color>
    <color type="primary" scheme_preference="dark">#1b5e20</color>
  </branding>

  <screenshots>
    <screenshot type="default">
      <caption>Main chat interface</caption>
      <image>https://raw.githubusercontent.com/SimonSchubert/Kai/v1.7.1/screenshots/desktop-1.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">moderate</content_attribute>
  </content_rating>

  <requires>
    <internet>always</internet>
  </requires>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <releases>
    <release version="1.7.1" date="2025-05-09">
      <url type="details">https://github.com/SimonSchubert/Kai/releases/tag/v1.7.1</url>
    </release>
  </releases>
</component>
